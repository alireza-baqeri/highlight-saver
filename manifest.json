{
  "manifest_version": 3,
  "name": "Highlight Saver",
  "version": "1.0",
  "description": "Save highlighted text from webpages.",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
},
  "background": {
    "service_worker": "background.js"
  }
}